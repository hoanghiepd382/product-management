extends ../../layouts/default.pug
include ../../mixins/flash.pug
include ../../mixins/select-tree.pug

block main 
    +flashError(5000)
    +flashSuccess(5000)

    h1(class="mb-4") #{pageTitle}
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        id="form-create-account"
        method="POST"
        enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên 
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                    value=user.fullName
                )
            div(class="form-group")
                label(for="email") Email 
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                    value=user.email
                )  
            div(class="form-group")
                label(for="password") Mật khẩu 
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    
                ) 
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone" 
                    value=user.phone               
                ) 

            div(class="form-group"
                upload-image
            )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control"
                    id="avatar"
                    name="avatar" 
                    accept="image/*"
                    upload-image-input              
                )
                div.image-preview-container
                    img(src=user.avatar 
                    upload-preview
                    )
                    span.delete-preview &times;

            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"              
                ) Cập nhật 

    
    script(src="/admin/js/account.js")
        
        
