extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{pageTitle}

    if (role.permissions.includes("roles_create"))
        form(
            action=`${prefixAdmin}/role/create`
            method="POST"
        )
            div(class="form-group")
                label(for="title") Tên quyền
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                ) 
            div(class="form-group")
                label(for="desc") Mô tả
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                    required
                )  
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Tạo mới