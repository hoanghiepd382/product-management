doctype html 
html 
    head 
        title #{pageTitle}

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://unpkg.com/file-upload-with-preview/dist/style.css" />
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.css")
    body 
        include ../partials/header.pug
        include ../mixins/flash.pug

        +flashSuccess(2000)

        block main

        #contact-box.contact-box.collapsed
            #contact-toggle.contact-toggle
                i.fa.fa-comments.contact-icon
            #contact-links.contact-links.collapsed
                a.contact-item(href="https://m.me/your-facebook-page" target="_blank")
                    img.contact-icon(src="/images/facebook-logo.webp" alt="Facebook Icon")
                    span Chat Facebook
                    span.contact-time (8h-21h)
                a.contact-item(href="https://zalo.me/your-zalo-id" target="_blank")
                    img.contact-icon(src="/images/zalo-logo.jfif" alt="Zalo Icon")
                    span Chat Zalo
                    span.contact-time (8h-21h)
                a.contact-item(href="tel:0944387682")
                    i.fa.fa-phone.contact-icon(style="background: #28a745;")
                    span 0944387682
                    span.contact-time (8h-21h)


        include ../partials/footer.pug
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" ></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" ></script>
        <script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js"></script>
        <script type="module" src="https://unpkg.com/file-upload-with-preview/dist/index.js"></script>
        script(src="https://cdnjs.cloudflare.com/ajax/libs/viewerjs/1.11.7/viewer.js") 
        script(src="/js/socket.js")
        script(src="/js/script.js") 

        block script