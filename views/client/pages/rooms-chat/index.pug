extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main 

    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sách phòng")

        .row.mb-3
            .col-12
                a(
                    href="/rooms-chat/create"
                    class="btn btn-sm btn-success mr-1"
                ) Tạo phòng chat

        .row 
            each room in listRoomChat
                .col-6 
                    div(class="box-room")
                        div(class="inner-avatar")
                            img(
                                src="https://img.freepik.com/premium-vector/person-with-blue-shirt-that-says-name-person_1029948-7040.jpg?semt=ais_hybrid"
                                alt=""
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{room.title}
                            div(class="inner-buttons")
                                a(
                                    href=`/chat/${room.id}`
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nhắn tin