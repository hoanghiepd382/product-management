extends ../../layouts/default.pug

block main 
    .container.py-5
        h1.mb-4 Lịch sử mua hàng

        #orderHistory.mb-4
            .order-card.p-3
                
                each item in order.products
                    .d-flex.justify-content-between.align-items-center.mb-3
                        div
                            span.shop-name.mr-2 Gym Lord
                            span.status Hoàn thành
                    .d-flex.align-items-start.mb-3
                        a(href=`/product/detail/${item.infoProduct.slug}`)
                            img.rounded.mr-3(
                            src=item.infoProduct.thumbnail, 
                            alt=item.infoProduct.title, 
                            style="width: 80px; height: 80px; object-fit: cover;"
                            )
                        .flex-grow-1                           
                            p.mb-1= item.infoProduct.title
                            p.mb-1.small x#{item.quantity}
                            p.old-price.mb-1 ₫#{item.price.toLocaleString()}
                            p.new-price.mb-1 ₫#{Number(item.infoProduct.newPrice).toLocaleString()}
                            p.total-price Tổng số tiền (#{item.quantity} Sản phẩm): ₫#{item.totalPrice.toLocaleString()}

                    .d-flex.justify-content-between.align-items-center.mt-3
                        .d-flex.align-items-center.shipping-status
                            svg.mr-1(fill="currentColor", viewBox="0 0 24 24")
                                path(d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z") 
                            span Đánh giá để có cơ hội nhận voucher miễn phí                        
                        button.review-btn Đánh giá
