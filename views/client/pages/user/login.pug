extends ../../layouts/default.pug
include ../../mixins/flash.pug

block main 
  +flashError(5000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-4
        .card.shadow-sm.border-0
          .card-body.p-4
            h1.text-center.mb-4 Đăng nhập
            form(action="/user/login" method="POST")
              .form-group.mb-3
                label(for="email" class="form-label") Email
                input(
                  type="email"
                  class="form-control rounded-pill"
                  id="email"
                  name="email"
                  placeholder="Nhập email của bạn"
                  required
                )
              .form-group.mb-3
                label(for="password" class="form-label") Mật khẩu
                input(
                  type="password"
                  class="form-control rounded-pill"
                  id="password"
                  name="password"
                  placeholder="Nhập mật khẩu"
                  required
                )
              .form-group.mb-3
                button(
                  type="submit"
                  class="btn btn-primary btn-block rounded-pill"
                ) Đăng nhập
              .text-center
                a(href="/user/password/forgot" class="text-muted small") Quên mật khẩu?
            
            // Phân cách
            .divider.my-4
              span Hoặc đăng nhập bằng
            
            // Nút Google và Facebook
            .d-flex.gap-2.justify-content-center
              a.btn.btn-outline-danger.social-btn.rounded-pill(href="/user/login/google")
                img(src="/images/google-logo.png" alt="Google" class="rounded-circle mr-2" style="width: 20px; height: 20px; object-fit: cover;")
                | Google
              a.btn.btn-outline-danger.social-btn.rounded-pill(href="/user/login/facebook")
                img(src="/images/facebook-logo.webp" alt="Facebook" class="rounded-circle mr-2" style="width: 20px; height: 20px; object-fit: cover;")
                | Facebook

            // Liên kết đăng ký
            .text-center.mt-3
              p.small Chưa có tài khoản? 
                a(href="/user/register" class="text-primary") Đăng ký ngay