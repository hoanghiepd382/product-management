extends ../../layouts/default.pug
include ../../mixins/flash.pug

block main 
    +flashError(5000)

    .container.my-5 
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã xác thực
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value=email
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="otp"
                            class="form-control"
                            id="otp"
                            name="otp"
                            require                         
                        )
                   
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận
                

    script(src="/js/script.js")